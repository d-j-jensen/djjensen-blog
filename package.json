{
  "name": "djjensenio",
  "version": "1.0.2",
  "description": "David Jensen's Website",
  "main": "index.js",
  "scripts": {
    "---COMMAND---": "",
    "build": "run-p build:*",
    "watch": "run-p serve watch:*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "---CSS---": "",
    "css:scss": "sass --load-path=src/scss src/scss:dist --style compressed --no-source-map",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "---BUILD---": "",
    "build:css": "npm run css:lint && npm run css:scss",
    "build:images": "imagemin src/images --out-dir=dist/images",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "---WATCH---": "",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "watch:html": "onchange \"src\" -- npm run build:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d-j-jensen/djjensen-blog.git"
  },
  "keywords": [
    "development",
    "developer",
    "personal",
    "blog"
  ],
  "author": "David Jensen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/d-j-jensen/djjensen-blog/issues"
  },
  "homepage": "https://github.com/d-j-jensen/djjensen-blog#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "eslint": "^7.10.0",
    "eslint-loader": "^4.0.2",
    "gulp-imagemin": "^7.1.0",
    "htmlnano": "^0.2.6",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^8.0.0",
    "posthtml": "^0.13.3",
    "posthtml-cli": "^0.7.6",
    "posthtml-modules": "^0.6.2",
    "stylelint": "^15.10.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "imagemin": "^7.0.1",
    "node-sass-import": "^1.1.1",
    "normalize-scss": "^7.0.1",
    "postcss": "^8.1.1"
  }
}
